<Window x:Class="CatsuBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="CatsuBrowser" Height="700" Width="1100"
        Background="#1e1e1e" Foreground="White" FontFamily="Segoe UI" Icon="20251212_185559.png">

    <Window.Resources>
        <!-- Style moderne pour les boutons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0078d7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style moderne pour TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style moderne pour ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <TabControl x:Name="TabControl" SelectionChanged="TabControl_SelectionChanged"
                    Background="#252526" BorderBrush="#3f3f46">
            <!-- Initial tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="New tab" Margin="0,0,5,0"/>
                        <Button Content="✖" Width="20" Height="20" Padding="0"
                                Click="CloseTab_Click"/>
                    </StackPanel>
                </TabItem.Header>
                <DockPanel>
                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6">
                        <Button Content="◀" Width="30" Click="BackButton_Click"/>
                        <Button Content="▶" Width="30" Click="ForwardButton_Click"/>
                        <Button Content="↻" Width="30" Click="RefreshButton_Click"/>
                        <Button Content="🏠" Width="30" Click="HomeButton_Click"/>

                        <TextBox x:Name="AddressTextBox" Width="420" KeyDown="AddressTextBox_KeyDown"/>
                        <Button Content="Search" Click="SearchButton_Click"/>

                        <ComboBox x:Name="HistoryCombo" Width="220" SelectionChanged="HistoryCombo_SelectionChanged"/>
                        <Button Content="Delete" Click="HistoryDeleteButton_Click"/>
                        <Button Content="Clear all" Click="HistoryClearButton_Click"/>
                    </StackPanel>

                    <!-- WebView2 -->
                    <wv2:WebView2 x:Name="WebView" />
                </DockPanel>
            </TabItem>

            <!-- Special tab for adding new ones -->
            <TabItem x:Name="AddTabItem" Header="+" Width="25" Height="25"/>
        </TabControl>
    </DockPanel>
</Window>
